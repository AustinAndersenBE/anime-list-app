datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int @id @default(autoincrement())
  username      String @unique
  email         String @unique
  passwordHash  String
  isAdmin       Boolean @default(false)
  userAnimeList UserAnimeList[] // one-to-many
  posts         Post[]
}

model UserAnimeList {
  id          Int @id @default(autoincrement())
  userId      Int
  externalAnimeId  String // migrate database later
  animeTitle  String
  status      String // see if you can enforce validation/options
  rating      Int? // change to float later
  user        User  @relation(fields: [userId], references: [id], onDelete: Cascade)
}




model Post {
  id            Int @id @default(autoincrement())
  userId        Int
  externalAnimeId    String?
  episodeNumber Int?
  title         String
  content       String
  createdDate      DateTime @default(now()) // make non modifiable
  updatedDate    DateTime @updatedAt
  user          User @relation(fields: [userId], references: [id], onDelete: Cascade)

}